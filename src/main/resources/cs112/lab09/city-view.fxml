<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cs112.lab09.controllers.CityController"
      prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label fx:id="locationLabel" alignment="CENTER" prefHeight="50.0" prefWidth="600.0" text="Location" />
        <ImageView fx:id="eventImageView" fitHeight="200.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
        <Label fx:id="descriptionLabel" wrapText="true" prefHeight="100.0" prefWidth="600.0" text="Original Description" />
        <Label fx:id="revisedDescriptionLabel" wrapText="true" prefHeight="100.0" prefWidth="600.0" text="Revised Description" />
        <Button text="Close" onAction="#handleCloseButton" />
    </children>
</VBox>